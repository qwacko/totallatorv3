{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"strict": false,
		"skipLibCheck": true,
		"declaration": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./"
	},
	"include": ["src/index.minimal.ts"],
	"exclude": ["dist", "node_modules", "**/*.test.ts"]
}