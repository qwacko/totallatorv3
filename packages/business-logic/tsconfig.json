{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"composite": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"incremental": true,
		"tsBuildInfoFile": "./tsconfig.tsbuildinfo"
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules", "**/*.test.ts"]
}
