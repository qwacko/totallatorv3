{
	"name": "@totallator/shared",
	"version": "0.0.1",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsc && tsc-alias",
		"dev": "tsc --watch & tsc-alias --watch",
		"clean": "rm -rf dist",
		"check": "tsc --noEmit",
		"circular": "madge --circular --extensions ts src/",
		"circular:graph": "madge --circular --extensions ts --image circular-deps.svg src/",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"dependencies": {
		"@totallator/context": "workspace:*",
		"arktype": "^2.1.20",
		"lodash-es": "^4.17.21",
		"prettier": "^3.6.2",
		"zod": "^4.0.10"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/lodash-es": "^4.17.12",
		"madge": "^8.0.0",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.9.2"
	}
}
