{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": false,
		"noUnusedLocals": false,
		"noEmit": true,
		"incremental": false,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"types": ["vite-plugin-pwa/client", "vite-plugin-pwa/svelte"],
		"paths": {
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"],
			"$app/types": ["./.svelte-kit/types/index.d.ts"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.svelte"],
	"exclude": [
		"node_modules/**",
		"src/service-worker/**",
		"tests/**",
		"*.config.*",
		"src/**/*.test.ts",
		"src/**/*.test.js",
		"src/lib/server/services/llmBatchProcessingService_old.ts",
		"src/lib/server/services/llmBatchProcessingService.ts",
		"src/lib/server/llm/client.test.ts",
		"src/lib/server/llm/tools/dispatcher.test.ts"
	]
}
